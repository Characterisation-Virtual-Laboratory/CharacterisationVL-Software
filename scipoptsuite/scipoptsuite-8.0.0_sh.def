Bootstrap:  shub
From:       Characterisation-Virtual-Laboratory/CharacterisationVL-Software:2004-cuda11.5

%labels
    MAINTAINER shu.chia@monash.edu

    APPLICATION_NAME ubuntu
    APPLICATION_VERSION 20.04

    HARDWARE CPU

    LAST_UPDATED 28-JAN-2022

%files
    SCIPOptSuite-8.0.0-Linux-ubuntu.sh /opt

%environment
    # Add SCIP to PATH
    export PATH=$PATH:/opt/SCIPOptSuite-8.0.0-Linux/bin

%post
    echo "*********************************************************"
    echo "Setup and display environment"
    echo "*********************************************************"
    export LC_ALL=en_AU.UTF-8
    export LANGUAGE=en_AU.UTF-8
    export DEBIAN_FRONTEND=noninteractive
    echo $LC_ALL
    echo $LANGUAGE
    echo $DEBIAN_FRONTEND
    echo "*********************************************************"
    echo "Install repositories"
    echo "*********************************************************"
    apt-get install -y software-properties-common
    apt-add-repository -y 'deb http://us.archive.ubuntu.com/ubuntu/ bionic main restricted'
    apt-add-repository -y 'deb http://us.archive.ubuntu.com/ubuntu/ bionic-updates main restricted'
    apt-add-repository -y 'deb http://us.archive.ubuntu.com/ubuntu/ bionic universe'
    apt-add-repository -y 'deb http://us.archive.ubuntu.com/ubuntu/ bionic-updates universe'
    echo "*********************************************************"
    echo "Update repositories and install desktop"
    echo "*********************************************************"
    apt update
    apt upgrade -y
    apt install -y locales
    locale-gen en_AU.UTF-8

    # Install dependencies
    apt -y update
    apt -y install gcc g++ gfortran liblapack3 libtbb2 libcliquer1 libopenblas-dev libgsl23 patchelf
    
    # Install SCIP
    cd /opt
    ./SCIPOptSuite-8.0.0-Linux-ubuntu.sh --prefix=/opt --include-subdir --skip-license
    rm SCIPOptSuite-8.0.0-Linux-ubuntu.sh

%runscript
    $*
